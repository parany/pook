@model Pook.Service.Models.Progressions.ProgressionCreate

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Progression</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Progression.StatusId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Progression.StatusId, Model.StatusList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Progression.StatusId, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(m => m.Progression.BookId)

        <div class="form-group">
            @Html.LabelFor(model => model.Progression.Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Progression.Date, "{0:dd-MM-yyyy}", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Progression.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Progression.Page, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Progression.Page, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Progression.Page, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ByBook")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
