@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administration<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Category", "Index", "Category")</li>
                <li>@Html.ActionLink("Author", "Index", "Author")</li>
                <li>@Html.ActionLink("Responsability Type", "Index", "ResponsabilityType")</li>
                <li>@Html.ActionLink("Firm", "Index", "Firm")</li>
                <li>@Html.ActionLink("Editor", "Index", "Editor")</li>
                <li>@Html.ActionLink("User", "Index", "User")</li>
                <li>@Html.ActionLink("Status", "Index", "Status")</li>
            </ul>
        </li>
    </ul>
}
