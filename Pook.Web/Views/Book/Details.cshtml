@model Pook.Web.Models.BookDetails

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        @if (!string.IsNullOrEmpty(Model.Book.Title))
        {
            <dt>
                @Html.DisplayNameFor(model => model.Book.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Book.Title)
            </dd>
        }

        @if (!string.IsNullOrEmpty(Model.Book.Category?.Title))
        {
            <dt>
                Category
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Book.Category.Title)
            </dd>
        }

        @if (!string.IsNullOrEmpty(Model.Book.Editor?.Title))
        {
            <dt>
                Editor
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Book.Editor.Title)
            </dd>
        }

        @if (!string.IsNullOrEmpty(Model.Book.Firm?.Title))
        {
            <dt>
                Firm
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Book.Firm.Title)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Book.NumberOfPages)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Book.NumberOfPages)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Book.ReleaseDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Book.ReleaseDate)
        </dd>

        @if (!string.IsNullOrEmpty(Model.Book.Description))
        {
            <dt>
                @Html.DisplayNameFor(model => model.Book.Description)
            </dt>
            <dd>
                @Html.Raw(Model.Book.Description)
            </dd>
        }
    </dl>

    <h4>Authors</h4>
    <h5>@Html.ActionLink("Add", "Create", "Responsability", new { bookId = Model.Book.Id }, null)</h5>
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Responsability</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var responsability in Model.Responsabilities)
            {
                <tr>
                    <td>@responsability.Author.FirstName</td>
                    <td>@responsability.Author.LastName</td>
                    <td>@responsability.ResponsabilityType.Title</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Responsability", new { id = responsability.Id }, null) |
                        @Html.ActionLink("Details", "Details", "Author", new { id = responsability.AuthorId }, null) |
                        @Html.ActionLink("Delete", "Delete", "Responsability", new { id = responsability.Id }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Notes</h4>
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Page</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in Model.Notes)
            {
                <tr>
                    <td>@note.User.FirstName</td>
                    <td>@note.User.LastName</td>
                    <td>@note.Page</td>
                    <td>@note.Title</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Book.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
